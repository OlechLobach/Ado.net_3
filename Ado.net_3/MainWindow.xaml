<Window x:Class="FootballLeagueApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Football League App" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="TeamNameTextBox" Text="Team Name"/>
            <TextBox x:Name="CityTextBox" Text="City"/>
            <TextBox x:Name="WinsTextBox" Text="0"/>
            <TextBox x:Name="LossesTextBox" Text="0"/>
            <TextBox x:Name="DrawsTextBox" Text="0"/>
            <TextBox x:Name="GoalsScoredTextBox" Text="0"/>
            <TextBox x:Name="GoalsConcededTextBox" Text="0"/>
            <Button Content="Add Team" Click="AddTeamButton_Click"/>
            <ListBox x:Name="TeamsListBox"/>
        </StackPanel>
    </Grid>
</Window>
