<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Library" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="TitleTextBox" Text="Title"/>
            <TextBox x:Name="DeveloperTextBox" Text="Developer"/>
            <TextBox x:Name="GenreTextBox" Text="Genre"/>
            <DatePicker x:Name="ReleaseDatePicker"/>
            <TextBox x:Name="GameModeTextBox" Text="Game Mode"/>
            <TextBox x:Name="CopiesSoldTextBox" Text="0"/>
            <!-- Default value, can be changed -->
            <Button Content="Add Game" Click="AddGameButton_Click"/>
            <ListBox x:Name="GamesListBox"/>
        </StackPanel>
    </Grid>
</Window>